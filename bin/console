#!/usr/bin/env ruby

# frozen_string_literal: true

require "bundler/setup"
require "pry"
require "dry/schema"

module Types
  include Dry::Types()
end

class Context
  def schema(&block)
    Dry::Schema.define(&block)
  end

  def params(&block)
    Dry::Schema.Params(&block)
  end

  def json(&block)
    Dry::Schema.JSON(&block)
  end
end

Pry.start(Context.new, prompt: [proc { "dry-schema> " }, proc { "dry-schema*> " }])
